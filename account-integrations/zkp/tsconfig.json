{
  "compilerOptions": {
    "module": "es2020",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "declarationDir": "./dist/types",
  },
  "exclude": ["./dist", "node_modules"],
  "include": ["./src", "./zk/circuits/**/*.js"]
}

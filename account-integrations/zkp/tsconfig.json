  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,

    "outDir": "dist",
  },
  "include": ["./src/**/*", "./zk/circuits/**/*.js"],
}
